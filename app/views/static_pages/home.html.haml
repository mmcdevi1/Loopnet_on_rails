              .m-l
                .text-muted Sat, 5 Mar
                %p Prepare for presentation
            .sl-item.b-l
              .m-l
                .text-muted Sun, 11 Feb
                %p
                  %a.text-info{:href => ""} Jessi
                  assign you a task
                  = succeed "." do
                    %a.text-info{:href => ""} Mockup Design
            .sl-item.b-l
              .m-l
                .text-muted Thu, 17 Jan
                %p Follow up to close deal
          / / streamline
      / / right col
