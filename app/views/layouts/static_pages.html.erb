<!DOCTYPE html>
<html class="app-fluid">
  <%= render 'layouts/head' %>
  <body>
    <section class="vbox">
      <%= render 'layouts/header' %>
      <% flash.each do |type, message| %>
        <div class="alert <%= flash_class type %>" id="alert-fadeout">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= message %>
        </div>
      <% end %> 
      <section>
        <section class="hbox stretch">    
          <% if user_signed_in? %>
          <%= render 'layouts/aside' %>
          <% end %>     
          <section id="content">
            <section class="hbox stretch">
              <section>
                <section class="vbox">
                  <%= yield %>
                </section><!-- end vbox -->    
              </section><!-- end section -->     
            </section><!-- end hbox stretch -->
          </section><!-- end id content -->  
        </section><!-- end hbox stretch -->   
      </section><!-- end section -->   
    </section><!-- end vbox --> 
    <%= render 'layouts/footer' %>  
  </body>
</html>

