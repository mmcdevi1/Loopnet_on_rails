<!DOCTYPE html>
<html class="app">
  <%= render 'layouts/head' %>
  <body>
    <section class="hbox stretch">
      <section id="content">
        <section class="hbox stretch">
          <section>
            <section class="vbox">
              <%= render 'layouts/header' %>
              <% flash.each do |type, message| %>
                <div class="alert <%= flash_class type %>" id="alert-fadeout">
                  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  <%= message %>
                </div>
              <% end %> 
              <section class="hbox stretch">
                <aside class="bg-white aside hidden-print b-r">          
                  <section class="vbox">
                     <section class="w-f scrollable">
                      <div class=slim-scroll data-height=auto data-disable-fade-out=true data-distance=0 data-size=10px data-railOpacity=0.2>
                        <!-- nav -->                 
                        <nav class="nav-primary hidden-xs" style="padding:20px;">
                          <%= link_to "Add New Deal", new_deal_path, class: "btn btn-danger btn-block btn-shadow" %>
                          <div class="hidden-nav-xs m-t-lg m-b-sm nav-sm-title">Menu</div>
                          <ul class="nav nav-main" data-ride="collapse">
                            <li>
                              <%= link_to root_path, class: "auto" do %>
                                <span class="">Dashboard</span>
                              <% end %>
                            </li>
                            <li>
                             <%= link_to market_path, class: "auto" do %>
                                <span class="">Market</span>                              
                              <% end %>
                            <li>
                              <%= link_to deals_path, class: "auto" do %>
                                <span class="">My Pipeline</span>
                              <% end %>
                            </li>
                            <li>
                              <a href="" class="auto">
                                <span class="">Calendar</span>
                              </a>
                            </li>
                            <li>
                              <a href="" class="auto">
                                <span class="">Contacts</span>
                              </a>
                            </li>
                          </ul>
                        </nav>
                        <!-- / nav -->
                      </div>
                    </section>
                  </section>
                </aside>
                <%= yield %>
              </section>   
            </section> 
          </section> 
        </section>
        <a href="#" class="hide nav-off-screen-block" 
           data-toggle="class:nav-off-screen" data-target="#nav"></a>
      </section>
    </section>
    
    <script type="text/javascript">
       
    	 // Bootstrap wysihtml5 editor     
        $('.wysihtml5').each(function(i, elem) {
          $(elem).wysihtml5({
            "font-styles": true, //Font styling, e.g. h1, h2, etc. Default true
            "emphasis": true, //Italics, bold, etc. Default true
            "lists": true, //(Un)ordered lists, e.g. Bullets, Numbers. Default true
            "html": true, //Button which allows you to edit the generated HTML. Default false
            "link": false, //Button to insert a link. Default true
            "image": false, //Button to insert an image. Default true,
            "color": false //Button to change color of font 
            
          });
          
         
        });

      
       

        $(".wysihtml5-toolbar .btn").addClass('btn-default btn-sm');

        // Image preview before upload
        var preview = $(".upload-preview-options img");
        
            $("#lefile").change(function(event){
                 var input = $(event.currentTarget);
                 var file = input[0].files[0];
                 var reader = new FileReader();
                 reader.onload = function(e){
                     image_base64 = e.target.result;
                     preview.attr("src", image_base64);
                 };
                 reader.readAsDataURL(file);
                 preview.addClass('preview-img-border');

                $('#uploadimage').css('width', '115px').css('height', '115px');  
                $('#pageimage').css('width', '150px').css('height', '150px');  


            });

            
          // Disable submit btn on click
            $('input[type="submit"').click(function() {
                $(this).addClass("disabled");
            });

      // Toggle second left sidebar
      $('#toggle').click(function() {
        $('#aside_toggle').toggle();
      });
       
    </script>

 





















	</body>
</html>

