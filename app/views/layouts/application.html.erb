<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
     
      <%= render 'layouts/header' %>
      <% flash.each do |type, message| %>
        <div class="alert <%= flash_class type %>" id="alert-fadeout">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= message %>
        </div>
      <% end %> 
      <%= render 'layouts/aside' %>
      <div id="content" class="app-content" role="main">
        <div class="app-content-body ">
          <div class="hbox hbox-auto-xs hbox-auto-sm" ng-init="
            app.settings.asideFolded = false; 
            app.settings.asideDock = false;
          ">
          <!-- main -->
          <div class="col">
            <%= yield %>
          </div>
          <div class="col w-md bg-white-only b-l bg-auto no-border-xs">
            <div class="wrapper-md">
          <div class="m-b-sm text-md">Chat</div>
          <ul class="list-group no-bg no-borders pull-in">
            <li class="list-group-item">
              <a herf="" class="pull-left thumb-sm avatar m-r">
                <%= image_tag('a4.jpg', class: "img-circle") %>
                <i class="on b-white bottom"></i>
              </a>
              <div class="clear">
                <div>
                  <%= link_to User.find(2).firstname + " " +  User.find(2).lastname, "#", class: "start-conversation",
                    "data-sid" => current_user.id, "data-rip" => User.find(2).id %>
                </div>
                <small class="text-muted">East Gate Capital LLC</small>
              </div>

            </li>
            <li class="list-group-item">
              <a herf="" class="pull-left thumb-sm avatar m-r">
                <%= image_tag('a5.jpg', class: "img-circle") %>
                <i class="on b-white bottom"></i>
              </a>
              <div class="clear">
                <div><%= link_to User.find(1).firstname + " " +  User.find(1).lastname, "#", class: "start-conversation",
                    "data-sid" => current_user.id, "data-rip" => User.find(1).id %></div>
                <small class="text-muted">Apex Equities LLC</small>
              </div>
            </li>
            <li class="list-group-item">
              <a herf="" class="pull-left thumb-sm avatar m-r">
                <%= image_tag('a6.jpg', class: "img-circle") %>
                <i class="busy b-white bottom"></i>
              </a>
              <div class="clear">
                <div><a href="">Joge Lucky</a></div>
                <small class="text-muted">CBRE</small>
              </div>
            </li>
            <li class="list-group-item">
              <a herf="" class="pull-left thumb-sm avatar m-r">
                <%= image_tag('a7.jpg', class: "img-circle") %>
                <i class="away b-white bottom"></i>
              </a>
              <div class="clear">
                <div><a href="">Folisise Chosielie</a></div>
                <small class="text-muted">Newmark</small>
              </div>
            </li>
            <li class="list-group-item">
              <a herf="" class="pull-left thumb-sm avatar m-r">
                <%= image_tag('a8.jpg', class: "img-circle") %>
                <i class="away b-white bottom"></i>
              </a>
              <div class="clear">
                <div><a href="">Aron Gonzalez</a></div>
                <small class="text-muted">CBRE</small>
              </div>
            </li>
          </ul>
          <div class="text-center">
            <a href="" class="btn btn-sm btn-primary padder-md m-b">More Connections</a>
          </div>
        </div>
          </div>
      </div>
    </div>
 
    <%= render 'layouts/footer' %>

  </body>
</html>

      
