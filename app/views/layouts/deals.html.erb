<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <div class="app app-header-fixed  ">
      <%= render 'layouts/header' %>
      <% flash.each do |type, message| %>
        <div class="alert <%= flash_class type %>" id="alert-fadeout">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= message %>
        </div>
      <% end %> 
      <%= render 'layouts/aside' %>
      <div id="content" class="app-content" role="main">
        <div class="wrapper bg-white b-b box-shadow fixedheader" id="fixedheader2">        
          <div class="btn-toolbar">     
            <button href="#" class="btn btn-sm btn-info btn-shadow pull-right">Publish</button>
          </div>
        </div>
        <div class="hbox hbox-auto-xs hbox-auto-sm" ng-controller="MailCtrl" style="padding-top:61px">
          <div class="col w-md bg-offwhite b-r bg-auto">
            <%= render 'layouts/aside/brokerform_aside' %>
          </div>
          <div class="col wrapper">
            <%= yield %>
          </div>
        </div>         
      </div>
    </div>

    
    <%= render 'layouts/footer' %>  
  </body>
</html>


