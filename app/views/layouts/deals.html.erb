<!DOCTYPE html>
<html class="app">
  <%= render 'layouts/head' %>
  <body>
    <section class="vbox">
      <%= render 'layouts/header' %>
      <% flash.each do |type, message| %>
        <div class="alert <%= flash_class type %>" id="alert-fadeout">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <%= message %>
        </div>
      <% end %> 
      <section>
        <section class="hbox stretch">
          <%= render 'layouts/aside' %>
          <section id="content">
            <section class="hbox stretch">
              <section>
                <section class="vbox">
                  <header class="header bg-white b-b clearfix box-shadow">
                    <button href="#" class="btn btn-sm btn-info btn-shadow pull-right">Publish</button>
                    <p><%= @deal.property_name %> > Property Information</p>
                  </header>
                  <section>
                    <section class="hbox stretch">                      
                      <%= render 'layouts/aside/brokerform_aside' %>
                      <section class="scrollable wrapper w-f">
                        <%= yield %>
                      </section>
                    </section><!-- end hbox stretch -->
                  </section><!-- end section -->   
                </section><!-- end vbox -->    
              </section><!-- end section -->     
            </section><!-- end hbox stretch -->
          </section><!-- end id content -->  
        </section><!-- end hbox stretch -->   
      </section><!-- end section -->   
    </section><!-- end vbox --> 
    <%= render 'layouts/footer' %>  
  </body>
</html>

