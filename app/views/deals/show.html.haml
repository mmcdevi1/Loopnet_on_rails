.p-xl
  %h3.bold.uppercase{:style => "margin:0;"}
    = @deal.property_name
  - if @deal.property_address?
    %p.text-muted
      = @deal.property_address.titleize
      , #{@deal.city.titleize}, #{@deal.state}#{@deal.zipcode}
  .row-col-8.m-b-md
    #col-8-1.col-8-sm-3
      - if @deal.image_galleries.exists?
        %div
          = image_tag(@image.deal_images.url(:small), class: "img-responsive img-thumbnail")
    #col-8-2.col-8-sm-1
      .property-class.metro
        %h3 Property Class
        %span
          = @deal.property_class
      .percent-leased.metro
        %h3 Percent Leased
        %span
          = @deal.percent_leased
          \%
    #col-8-3.col-8-sm-2
      .original-debt.metro
        %h3 Estimated Original Debt
        %span
          $8,500,000
      .most-recent-mortgage.metro
        %h3 Most Recent Mortgage
        %span
          1/10/2015
    #col-8-4.col-8-sm-2
      .square-footage.metro
        %h3 Square Footage
        %span
          = number_with_delimiter(@deal.sf)
          sf
      .rent.metro
        %h3 Rent
        %span
          $#{number_with_delimiter("53")}/sf
  / end row 8 cols
  .broker.m-b-md
    %span.thumb-sm.avatar.pull-left.m-r
      = image_tag('a4.jpg')
      %i.on.md.b-white.bottom
    .clear
      %div
        %a.bold{:href => "#"}
          = @deal.user.firstname
          = @deal.user.lastname
      %small.text-muted CBRE
  / end broker
/ end pxl
.row
  .col-sm-12
    %div{:role => "tabpanel"}
      / Nav tabs
      %ul.nav.nav-tabs{:role => "tablist", :style => "margin-left:30px;"}
        %li.active{:role => "presentation"}
          %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#home", :role => "tab"}
            Analytics
        %li{:role => "presentation"}
          %a{"aria-controls" => "financial", "data-toggle" => "tab", :href => "#financial", :role => "tab"}
            Financials
        %li{:role => "presentation"}
          %a{"aria-controls" => "summary", "data-toggle" => "tab", :href => "#summary", :role => "tab"}
            Summary
        %li{:role => "presentation"}
          %a{"aria-controls" => "important_docs", "data-toggle" => "tab", :href => "#important_docs", :role => "tab"}
            Important Documents
        %li{:role => "presentation"}
          %a{"aria-controls" => "important_dates", "data-toggle" => "tab", :href => "#important_dates", :role => "tab"}
            Important Dates
      / Tab panes
      .tab-content.p-xl
        #home.tab-pane.active{:role => "tabpanel"}
          %h5.bold.uppercase Key Mortgage Records
          %table.table.bold.uppercase.m-b-xl
            %thead
              %tr
                %th Date
                %th Borrower
                %th Lender
                %th Note Holder
                %th Amount
            %tbody
              %tr
                %td 1/10/2015
                %td east garden llc
                %td wells fargo
                %td -
                %td $5,000,000
              %tr
                %td 1/10/2015
                %td east garden llc
                %td wells fargo
                %td -
                %td $3,000,000
          %h5.bold.uppercase Ownership
          %table.table.bold.uppercase
            %thead
              %tr
                %th Date
                %th Borrower
                %th Lender
                %th Note Holder
                %th Amount
            %tbody
              %tr
                %td 1/10/2015
                %td east garden llc
                %td wells fargo
                %td -
                %td $5,000,000
              %tr
                %td 1/10/2015
                %td east garden llc
                %td wells fargo
                %td -
                %td $3,000,000
        #financial.tab-pane{:role => "tabpanel"}
          %h5.bold.uppercase 2014 Financial Report
          %table.table.bold.uppercase
            %thead
              %tr
                %th Date
                %th Borrower
                %th Lender
                %th Note Holder
                %th Amount
            %tbody
              %tr
                %td 1/10/2015
                %td east garden llc
                %td wells fargo
                %td -
                %td $5,000,000
              %tr
                %td 1/10/2015
                %td east garden llc
                %td wells fargo
                %td -
                %td $3,000,000
        #summary.tab-pane{:role => "tabpanel"}
          .row
            .col-lg-6
              %h5.bold.uppercase Property Summary
              - unless @deal.deal_summary == nil
                = @deal.deal_summary.html_safe
        #important_docs.tab-pane{:role => "tabpanel"}
          %h5.bold.uppercase Important Documents
          %table.table.bold.uppercase
            %thead
              %tr
                %th File Name
            %tbody
              - @documents.each do |docs|
                %tr
                  %td= docs.doc_files_file_name
        #important_dates.tab-pane{:role => "tabpanel"}
          %h5.bold.uppercase Important Dates
          %table.table.bold.uppercase
            %thead
              %tr
                %th Event
                %th Date
            %tbody
              - @dates.each do |date|
                %tr
                  %td= date.title
                  %td= date.date
