<%= form_for(@deal) do |f| %>
  
  <header class="header bg-white b-b clearfix p-md box-shadow">
    <div class="row">
      <div class="col-sm-4">
        
      </div>
      <div class="col-sm-4">
        <% if Rails.env.development? %>
        50% complete
        <div class="progress progress-xs" style="margin:0"> 
          <div class="progress-bar bg-info" data-toggle="tooltip" data-original-title="50%" style="width: 50%">
          </div> 
        </div>
        <% end %>
      </div>
      <div class="col-sm-4 text-right">
        <%= f.submit "Continue", class: "btn btn-info" %>
      </div>
    </div>
  </header>
  <section class="scrollable wrapper w-f">
    <div class="panel-body">
      <div class="add-page">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <% if @deal.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@deal.errors.count, "error") %> prohibited this deal from being saved:</h2>
                <ul>
                <% @deal.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <h1>Property Information</h1>
            <div class="form-group">
              <%= f.label :property_name %>
              <%= f.text_field :property_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :owner_name %>
              <%= f.text_field :owner_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :floors %>
              <%= f.text_field :floors, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :sf, "Square footage" %>
              <%= f.text_field :sf, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :year_built %>
              <%= f.text_field :year_built, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :percent_leased %>
              <%= f.text_field :percent_leased, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :property_class %>
              <div class="btn-group m-r">
                <button data-toggle="dropdown" class="btn btn-sm btn-default dropdown-toggle" style="padding:7px 16px;">
                  <span class="dropdown-label" data-placeholder="Please select">Select</span> 
                  <span class="caret" style="margin-left:30px;"></span>
                </button>
                <ul class="dropdown-menu dropdown-select">
                  <li><a href="#"><%= f.radio_button :property_class, "A" %><%= "A" %></a></li>
                  <li><a href="#"><%= f.radio_button :property_class, "B" %><%= "B" %></a></li>
                  <li><a href="#"><%= f.radio_button :property_class, "C" %><%= "C" %></a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>































